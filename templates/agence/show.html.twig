{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - Détails de l'agence {{ agence.nom }}{% endblock %}

{% block body %}
    <main>
        <div class="container">
            <h2 class="mt-4">Détails de l'agence {{ agence.nom }}</h2>
            <div class="row mt-4">
                <div class="col-md-6">
                    <table class="table">
                        <tbody>
                        <tr>
                            <th scope="row">ID</th>
                            <td>{{ agence.id }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Nom</th>
                            <td>{{ agence.nom }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Adresse</th>
                            <td>{{ agence.adresse }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Numéro de téléphone</th>
                            <td>{{ agence.numTel }}</td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <a href="{{ path('app_agence_index') }}" class="btn btn-primary">Revenir à la liste</a>
            <a href="{{ path('app_agence_edit', {'id': agence.id}) }}" class="btn btn-warning">Modifier</a>
            {{ include('agence/_delete_form.html.twig') }}
        </div>
    </main>
{% endblock %}
